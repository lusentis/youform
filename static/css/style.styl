@import ('nib')
@import url('//fonts.googleapis.com/css?family=Source+Sans+Pro:200')
@import url('//fonts.googleapis.com/css?family=Open+Sans:300,400,600')


_light = #FFFFFF
_dark = #333333

.open-sans
  font-family 'Open Sans', sans-serif

.source-sans-pro
  font-family 'Source Sans Pro', sans-serif

html,
body
  width 100%
  min-width 1000px
  height 100%
  font-size 15px
  line-height 150%
  font-weight 400
  background darken(_light, 5%)
  color _dark
  #website
    background _light
*
  @extend .open-sans

h1
  @extend .source-sans-pro
  font-size 22px
  letter-spacing 1px
  font-weight 300
  color #999
  &.white
    color #FFFFFF
  &.accent
    color #f92946

h2
  @extend .open-sans
  font-size 17px
  font-weight 400
  &.white
    color #FFFFFF
  &.accent
    color #f92946

hr
  border none
  border-top 2px solid rgba(_dark, 0.1)
  margin 15px 0

.spacer
  height 20px
.big-spacer
  height 60px

.text-center
  text-align center

.logo
  width 200px

a.watch,
a.fund
  margin 0 10px
  display inline-block
  padding 5px 15px 5px 10px
  border-radius 5px
  &:hover
    background-color rgba(#666666, 0.05)
  span,
  img
    display inline-block
    vertical-align middle
    margin 0 3px
  span
    font-size 14px
    font-weight 600
    text-transform uppercase
    padding 1px
    color #666666
    border-bottom 2px solid rgba(#666666, 0.2)
  img
    width 40px
    height 40px

a.fund
  &:hover
    background-color rgba(#5ccd62, 0.05)
  span
    color #5ccd62
    border-bottom 2px solid rgba(#5ccd62, 0.2)

.preview
  background url('../img/macbook-preview.png') center top no-repeat
  padding 150px 0 100px
  max-height 600px

form.pure-form
  input[type=email]
    @extend .open-sans
    font-weight 300
    font-size 16px
    height 50px
    display inline-block
    vertical-align middle
    background #FFFFFF
    border-color #FFFFFF
    border-radius right 0
    box-shadow none
    width 300px
  button
    @extend .open-sans
    font-weight 600
    font-size 14px
    text-transform uppercase
    height 50px
    display inline-block
    vertical-align middle
    border-radius left 0
    box-shadow none
    background #5ccd62
    color #FFFFFF

  label
    @extend .open-sans
    display block
    font-size 13px
    font-weight 400
    color rgba(#FFFFFF, 0.5)

  #mce-responses
    display inline-block
    text-align left
    position relative
    top -26px

    #mce-error-response
      position absolute
      border-radius 5px
      font-weight 600
      padding 10px
      margin-left 10px
      color #f96969
      white-space nowrap

    #mce-success-response
      position absolute
      border-radius 5px
      font-weight 600
      padding 10px
      margin-left 10px
      color #5ccd62
      white-space nowrap

footer
  padding 10px 0
  color #999999
  font-size 13px
  strong
    font-weight 600
  a
    color #999999
    font-weight 600
    display inline-block
    text-decoration none
    padding 0
    &:hover
      color #f92946
      border-bottom 2px solid rgba(#f92946, 0.2)

.modal
  position fixed
  top 6%
  left 50%
  width 500px
  margin-left -280px
  background _light
  border-radius 8px
  padding 15px 30px
  box-shadow 0 0 1000px 1000px rgba(_dark, 0.3)
  display none
  &.open
    display block

  a.close
    cursor pointer
    font-size 18px
    font-weight 600
    color #999999
    &:hover
      color #333333

#mask
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  display none
  &.open
    display block