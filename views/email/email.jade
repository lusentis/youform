extends base


block title
  | #{form.form_subject}


block mailtitle
  | #{form.intro}


block mailpretitle
  p(style='font-size: 12px; color: #999999; text-align: left; margin-bottom: 5px;')
    | #{date}
  h2(style='font-size: 24px; line-height: 24px; font-weight: lighter; color: #999999; text-align: left; margin-top: 0;')
    | #{form.form_name}


block mailcontent

  table(border='0', width='100%', height='100%', cellpadding='0', cellspacing='0')
    for field, key in user_form
      tr
        td(style='width: 30%; text-align: left; vertical-align: top; color: #AAAAAA; border-bottom: 2px solid #EEEEEE; padding-top: 5px; padding-bottom: 5px; font-size: 12px;') #{key}
        td(style='width: 70%; text-align: left; vertical-align: top; color: #666666; border-bottom: 2px solid #EEEEEE; padding-top: 5px; padding-bottom: 5px;')
          if typeof field === 'string'
            | !{field.replace(/\n/gm, '<br />')}
          else
            | #{field}
 
  br