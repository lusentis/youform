doctype 5
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='initial-scale=1.0')
    meta(name='format-detection', content='telephone=no')
    title 
      block title

    style.
      /* Resets: see reset.css for details */
      .ReadMsgBody { width: 100%; background-color: #F2F2F2;}
      .ExternalClass {width: 100%; background-color: #F2F2F2;}
      .ExternalClass, .ExternalClass p, .ExternalClass span, .ExternalClass font, .ExternalClass td, .ExternalClass div {line-height:100%;}
      body {-webkit-text-size-adjust:none; -ms-text-size-adjust:none;}
      body {margin:0; padding:0;}
      table {border-spacing:0;}
      table td {border-collapse:collapse;}
      /* Constrain email width for small screens */
      @media screen and (max-width: 600px) {
        table[class="container"] {
          width: 100% !important;
        }
      }
      /* Give content more room on mobile */
      @media screen and (max-width: 480px) {
        td[class="container-padding"] {
          padding-left: 12px !important;
          padding-right: 12px !important;
        }
      }


  body(style='background-color: #F2F2F2; margin: 0; padding: 0;', bgcolor='#F2F2F2', leftmargin='0', topmargin='0', marginwidth='0', marginheight='0')
    

    table(border='0', width='100%', height='100%', cellpadding='0', cellspacing='0', bgcolor='#F2F2F2')
      tr
        td(style='text-align: center; padding-top: 10px; padding-bottom: 10px;')
          br
          br
          a(href='http://youform.me', border='0', style='border: none;')
            img(src='http://youform.me/img/youform.png', border='0', style='border: none; width: 30px; height: 30px;')
          
          br

      tr
        td(align='center', valign='top', bgcolor='#F2F2F2', style='background-color: #F2F2F2;')
          //- 600px container (white background) 
          table.container(border='0', width='600', cellpadding='0', cellspacing='0', bgcolor='#FFFFFF')

            tr
              td(bgcolor='##{form.colours}', style='background-color: ##{form.colours}; line-height: 2px; height: 2px; overflow: hidden;')
                | &nbsp;

            tr
              td.container-padding(style='padding-left: 30px; padding-right: 30px; font-size: 15px; line-height: 24px; font-family: "Open Sans", Helvetica, sans-serif; color: #333;')
                br
                block mailpretitle
                h1(style='font-size: 15px; line-height: 24px; color: #333333; text-align: left;')
                  block mailtitle
                br


            tr
              td.container-padding(bgcolor='#FFFFFF', style='background-color: #FFFFFF; padding-left: 30px; padding-right: 30px; font-size: 14px; line-height: 20px; font-family: "Open Sans", Helvetica, sans-serif; color: #333; text-align: left;')

                block mailcontent

                br
                br

            tr
              td(bgcolor='#CCCCCC', style='background-color: #CCCCCC; line-height: 2px; height: 2px; overflow: hidden;')
                | &nbsp;


      tr
        td.container-padding(style='font-family: "Open Sans", Helvetica, sans-serif; text-align: center; padding-top: 10px; padding-bottom: 10px; padding-left: 20px; padding-right: 20px;')
          br
          p(style='color: #999999; font-size: 12px; line-height: 18px; margin: 0; padding: 0;')
            block mailfooter

          br
          br
