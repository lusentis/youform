extends layout

block content
  .container
    .panel.panel-default
      .panel-heading New form
      .panel-body
        form.form(role='form', action='/api/new-form', method='post')
          div
            input.form-control(type='email', name='email-crt', placeholder='Creator email address', required)
          div
            input.form-control(type='email', name='email-dest', placeholder='Destination email address', required)
          div
            input.form-control(type='text', name='f-name', placeholder='Website name', required)
          div
            input.form-control(type='url', name='w-url', placeholder='Website url', required)
          div
            input.form-control(type='url', name='w-success-page', placeholder='Error page url', required)
          div
            input.form-control(type='url', name='w-error-page', placeholder='Success page url', required)

          div
            input.form-control(type='email', name='snd-email', placeholder='Email sender', required)
          div
            input.form-control(type='text', name='snd-name', placeholder='Email sender name', required)
          div
            input.form-control(type='text', name='f-subject', placeholder='Email subject', required)
          div
            textarea.form-control(type='text', name='f-intro', placeholder='Introduction', required)
          div
            select.form-control(name='colours', required)
              option(value='.pal1') Colori 1
              option(value='.pal2') Colori 2
              option(value='.pal3') Colori 3
              option(value='.pal4') Colori 4

          button.btn.btn-default(type='submit') Send