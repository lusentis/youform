@import ('nib')
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700')

_white = #FFFFFF
_green = #4EB360
_blue  = #0378A6

.open-sans
  font-family 'Open Sans', sans-serif

html,
body
  width 100%
  height 100%
  @extends .open-sans
  font-size 15px
  font-weight 400
  background #F2F2F2
  overflow-x hidden

.text-center
  text-align center
.text-right
  text-align right
.text-left
  text-align left

#layout
  padding-left 25%
  position relative

  .sidebar
    position fixed
    top 0
    bottom 0
    width 25%
    margin-left -25%
    background _green
    color _white
    overflow hidden

    .sidebar-table
      display table
      height 100%
      width 100%

      .header
        display table-cell
        vertical-align middle
        padding 20px 20px 150px 20px

        .logo
          width 80px
          height auto

    .pure-button.pure-button-success
      background darken(_green, 20%)

  .content
    padding 20px 40px

    form
      label
        font-weight 600
        font-size 12px
        color #999
        text-transform uppercase
        margin-top 15px
      input,
      textarea,
      select
        @extends .open-sans
        padding 10px
        font-size 14px
        resize none
      
      .radio-palette
        display inline-block
        line-height 0
        width 14px
        height 14px
        border-radius 9px
        margin-right 10px
        background _white
        transition background 0.2s ease
        margin-top 14px
        cursor pointer
        input[type='radio']
          display none
        &.radio-palette-1
          box-shadow inset 0 0 0 2px _green
          &.active
            background _green
        &.radio-palette-2
          box-shadow inset 0 0 0 2px _blue
          &.active
            background _blue
        &.radio-palette-3
          box-shadow inset 0 0 0 2px purple
          &.active
            background purple
        &.radio-palette-4
          box-shadow inset 0 0 0 2px red
          &.active
            background red

  h1,
  h2,
  h3
    font-weight 300

  h4,
  h5,
  h6
    font-weight 400

  .spacer
    height 20px

  .pure-button
    @extends .open-sans
    font-weight 700
    text-transform uppercase
    letter-spacing 1px
    font-size 14px
    padding-top 10px
    padding-bottom 10px

    &.pure-button-success
      background _green
      color _white
      transition opacity 0.5s ease
      &:hover
        opacity 0.8

    &.pure-button-primary
      background _blue
      color _white
      transition opacity 0.5s ease
      &:hover
        opacity 0.8
